@model List<Course>

    @section Header{
    @await Html.PartialAsync("_Header")
    }

    <div class="row">
        @foreach(var kurs in @Model){
            @if((kurs.isActive?? false )&& (kurs.isHome?? false)){

                <div class="col-3">
                    <div class="card">
                        <img src="~/img/@kurs.Image" alt="">
                        <div class="card-body">
                            <h5 class="card-title">@kurs.Title</h5>
                            <p class="card-text">@kurs.Description</p>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@kurs.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>