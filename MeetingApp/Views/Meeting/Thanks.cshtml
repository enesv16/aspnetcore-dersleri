@model UserInfo

@{
ViewBag.Title = "Toplanti Özeti";
Layout = "_Layout2";
}
<main class="text-center">
    <h1 class="h4 ">Başvuru Durumu</h1>

    @if(Model.WillAttend == true){
        <p>Teşekkürler @Model.Name, bey Toplantiya sizinle birlikte @ViewBag.UserCount kisi katiliyor.</p>
        <a class="btn btn-sm btn-outline-primary" href="/Meeting/List">Katilimcilari Listele</a>
    }else
    {
        <p>@Model.Name, katilim göstermediginiz icin uzgunuz.  </p>  
        <a class="btn btn-sm btn-outline-primary" href="/Meeting/Apply">Başvuru Formu</a>
    }


</main>