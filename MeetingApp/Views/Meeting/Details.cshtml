@model UserInfo
@{
    ViewBag.Title="Başvuru Detaylari";
}
@{
    var className = @Model.WillAttend== true? "primary":"danger";
    var Katilim = @Model.WillAttend== true? "Katılıyor":"Katılmıyor";
}

<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
    <p>
        <span class="badge text-bg-@className">@Katilim</span>
    </p>
    <p>İsim: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <p>Katılım Durumu: @Model.WillAttend</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Katılımcı Listesine Dön</a>
</main>