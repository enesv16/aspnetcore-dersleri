@model Product
@{
ViewData["Title"] = "Edit Policy";
}


<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control">
        <span asp-validation-for="ProductName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="input-group mb-3">
        <img src="~/img/@Model.Image" alt="" style="width: 100px;">
        <input type="hidden" asp-for="@Model.Image">
    </div>
    <div>
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
            <option value="">All</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input">
        <label asp-for="IsActive" class="form-check-label">Active</label>
        <span asp-validation-for="IsActive"></span>
    </div>


    <button type="submit" class="btn btn-sm btn-primary ">Save</button>
</form>