@model IEnumerable<AppRole>

    <a class="btn btn-primary" asp-controller="Roles" asp-action="Create">Create Role</a>
    <hr>


    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role Name</th>
                <th>Users</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
            <tr>
                <td colspan="4" class="text-center">There is no role </td>
            </tr>
            }
            @foreach (var role in Model)
            {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                    <form method="post" onsubmit="return confirm('emin misiniz')" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>