@model IEnumerable<AppUser>


    <a class="btn btn-primary" asp-controller="Users" asp-action="Create">Create User</a>
    <hr>

    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a> |
                        <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline;">
                            <input type="hidden" value="@user.Id" name="id">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>