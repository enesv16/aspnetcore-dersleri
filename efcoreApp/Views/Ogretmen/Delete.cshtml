@model Ogretmen

<p>
    <b>@Model.Ad @Model.Soyad </b>isimli öğretmeni silmek istiyor musunuz?
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.OgretmenId" />
        <button type="submit" class="btn btn-sm btn-danger">Öğretmeni Sil</button>
        <a asp-action="Index" class="btn btn-sm btn-primary">Vazgeç</a>
    </form>
</p>