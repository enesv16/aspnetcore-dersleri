@model KursKayit

<h2>Kurs Kaydı Ekle</h2>
<hr>
<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci Seçiniz</label>
        <select asp-for="OgrenciId" asp-items="@ViewBag.Ogrenciler" class="form-select" >
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs Seçiniz</label>
        <select asp-for="KursId" asp-items="@ViewBag.Kurslar" class="form-select" >
            <option value="">Seçiniz</option>
        </select>
    </div>


    <button type="submit" class="btn btn-secondary ">Öğrenciyi Kursa Kaydet</button>

</form>