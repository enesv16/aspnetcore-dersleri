@model IEnumerable<KursKayit>

    <h2>Öğrenci Listesi</h2>
    <a asp-controller="KursKayit" asp-action="Create" class="btn btn-sm btn-primary mb-3 ">Kurs Kaydı Ekle</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.KursKayitId)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogrenci.OgrenciAdSoyad)</th>
                <th>@Html.DisplayNameFor(m=>m.Kurs.Baslik)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in @Model)
            {  
                <tr>
                    <td>@Html.DisplayFor(modelItem=> item.KursKayitId)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Ogrenci.OgrenciAdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Kurs.Baslik)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.KursKayitId" class="btn btn-sm btn-primary mb-3">Kaydı Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.KursKayitId" class="btn btn-sm btn-danger">Kaydı Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>