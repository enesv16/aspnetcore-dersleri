@model Ogrenci
<p>
    <b>@Model.OgrenciAd @Model.OgrenciSoyad </b>isimli öğrenciyi silmek istiyor musunuz?
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.OgrenciId" />
        <button type="submit" class="btn btn-sm btn-danger">Öğrenciyi Sil</button>
        <a asp-action="Index" class="btn btn-sm btn-primary">Vazgeç</a>
    </form>
</p>